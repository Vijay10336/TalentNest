function login(){
	$('#userOrpasswordWrong').hide();
	var email=document.getElementById("username").value.trim();
	if($("#username").val() == ""){
		
		document.getElementById('username').focus();
		$('#useremailEmpty').show();
		
		return false;
	}else{
		$('#useremailEmpty').hide();
	}
	if (email=="null" || !ck_email.test(email)) {
		
		document.getElementById('username').focus();
		$('#gmailvalid').show();
		return false;
	}else{
		$('#gmailvalid').hide();
	}
	if($("#password").val() == ""){
	
		document.getElementById('password').focus();
		$('#userpasswordEmpty').show();
		return false;
	}else{
		$('#userpasswordEmpty').hide();
	}

var data={email:$("#username").val(),
	password:$("#password").val()
};


loginCall(data);
}

function loginCall(data){
	var elem=$('#loginspiner');
	$.ajax({
		url:"doLogin",
		type:"POST",
		contentType : "application/json",
		dataType : 'json',
		data:JSON.stringify(data),
		beforeSend:function(){

	    	$(elem).spin('test','#0069d9');

	    },

	    complete:function(){

	    	$(elem).spin(false);

	    },
		success:function(data){
 			if ($.isEmptyObject(data)){  
 				$('#userOrpasswordWrong').show();
 				
 			}
 			else{ 
 				loggedIn(data);
 				 	}
 			
 		}

		});
}

